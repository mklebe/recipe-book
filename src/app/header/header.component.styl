ul
    display: flex
    list-style: none
    padding: 0
    margin: 0
    padding: 0 16px 4px 16px
    width: 100%

a
    color: #ffffff
    display: block
    text-decoration: none
    padding: 6px 15px

.navigation:hover
    box-shadow: 0 4px 0 0 #f4b600
    color: #f4b600

:host
    display: flex
    align-items: center
    flex-direction: column
    width: 100%

.login-item
    margin-left: auto
    margin-bottom: 5px

.login-link
    border: 2px solid #b2d423
    border-radius: 8px
    color: #b2d423

    &:hover
        background-color: #b2d423
        color: #ffffff

img
    width: 125px
    height 126px